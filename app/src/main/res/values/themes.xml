<resources>
    <!-- Base application theme. -->
    <style name="Theme.TeachByVoice" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/Uranium_Blue</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/Lilac</item>
        <item name="colorOnSecondary">@color/lilac</item>

        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
    </style>
    <style name="ToolBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="CustomPopupView" parent="Theme.AppCompat.NoActionBar">

        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4dp</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>